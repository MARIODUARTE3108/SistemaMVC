@model ProjetoMVC01.Models.ProdutoEdicaoModel
@{
    ViewBag.Title = "Edicao";
    Layout = "~/Views/Templates/Layout.cshtml";
}

<h3>Atualização de Produto</h3>
<p> Utilize o formulário para alterar o produto.</p>
<hr />

@if (TempData["Mensagem"] != null)
{
    <div class="alert alert-secondary mb-2">
        <strong>@TempData["Mensagem"]</strong>
    </div>
}

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.IdProduto)

    <label>Nome do produto:</label>
    @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
    <div class=" text-danger">
        @Html.ValidationMessageFor(model => model.Nome)
    </div>
    <br />

    <label>Preço do produto:</label>
    @Html.TextBoxFor(model => model.Preco, new { @class = "form-control" })
    <div class=" text-danger">
        @Html.ValidationMessageFor(model => model.Preco)
    </div>
    <br />

    <label>Quantidade do produto:</label>
    @Html.TextBoxFor(model => model.Quantidade, new { @class = "form-control" })
    <div class=" text-danger">
        @Html.ValidationMessageFor(model => model.Quantidade)
    </div>
    <br />

    <input type="submit" name= value="Salvar Alterações" class="btn btn-primary" />

}
